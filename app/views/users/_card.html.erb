<div class="user-card">
  <div class="avatar-box">
    <%= user_avatar_tag(user, style: :medium) %>
  </div>
  <div class="infos">
    <div class="mb-1">
      <%= user_name_tag(user) %>
      <%= user_slug_tag(user) %>
    </div>
    <div class="f6">
      <%= user.followers_count %> <%= t(".followers") %>
    </div>
  </div>
</div>
