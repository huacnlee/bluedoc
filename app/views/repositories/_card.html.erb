<div class="repository-card">
  <div class="mb-1 text-main">
    <% if defined?(current_group) && current_group.id != repository.user_id %>
    <%= user_name_tag(repository.user) %> /
    <% end %>
    <%= repository_name_tag(repository) %>
  </div>
  <div class="desc text-gray">
    <%= repository.description %>
  </div>
  <div class="f6 mt-2">
    <span class="counter text-gray mr-2 icon-middle-wrap"><%= icon_tag("star") %> <%= repository.stars_count %></span>
    <span class="updated text-gray-light"><%= t("updated at") %> <%= timeago repository.updated_at %></span>
  </div>
</div>
