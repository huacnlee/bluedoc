<%= render 'base' %>

<div class="detail admin-edit-admin_user">
  <div class="detail-action">
    <%= link_to icon_tag("arrow-left", label: t("admin.Back")), admin_users_path, class: "btn" %>
    <%= link_to icon_tag("pencil", label: t("admin.Edit")), edit_admin_user_path(@user.id), class: "btn" %>
  </div>

    <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.slug") %>:</div>
    <div class="detail-value"><%= @user.slug %></div>
  </div>
    <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.name") %>:</div>
    <div class="detail-value"><%= @user.name %></div>
  </div>
    <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.email") %>:</div>
    <div class="detail-value"><%= @user.email %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.location") %>:</div>
    <div class="detail-value"><%= @user.location %></div>
  </div>
  <% if @user.url %>
  <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.url") %>:</div>
    <div class="detail-value"><%= link_to @user.url, @user.url %></div>
  </div>
  <% end %>
  <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.description") %>:</div>
    <div class="detail-value"><%= @user.description %></div>
  </div>

    <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.followers_count") %>:</div>
    <div class="detail-value"><%= @user.followers_count %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label"><%= t("activerecord.attributes.user.following_count") %>:</div>
    <div class="detail-value"><%= @user.following_count %></div>
  </div>
  <div class="detail-row">
    <div class="detail-label"><%= t("created_at") %>:</div>
    <div class="detail-value"><%= @user.created_at %></div>
  </div>
</div>